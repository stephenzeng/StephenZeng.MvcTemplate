@using StephenZeng.MvcTemplate.Web.Helpers;
@using PagedList.Mvc
@model PagedList.IPagedList<StephenZeng.MvcTemplate.Web.Models.UserViewModel>

<table class="table table-striped">
    <tr>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Confirmed
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Approved)
        </th>
        <th>
            Registered
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @item.EmailConfirmed.ToIcon()
            </td>
            <td>
                @item.Approved.ToIcon()
            </td>
            <td>
                @item.RegisterTime.ToShortDateString()
            </td>
            <td>
                <a href="@Url.Action("Details", new{item.Id})" class="pull-right">
                    <i class="fa fa-edit"></i> Details
                </a>
            </td>
        </tr>
    }

</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))